	@Override
	public void run() {
		for (int i = 0; i < 10; i++) {
			if (i == 3) {
				throw new ArrayIndexOutOfBoundsException();
			}
			System.out.println(i);
			try {
				Thread.sleep(10000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}
